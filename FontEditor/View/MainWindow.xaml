<Window x:Class="FontEditor.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="442.379" Width="665.52"
        TabIndex="2"
        Background="Bisque">


    <TabControl x:Name="tabControl1" HorizontalAlignment="Left" Height="419" Margin="0,0,-145,-99" VerticalAlignment="Top" Width="662"  Background="Bisque" SelectionChanged="tabControl1_SelectionChanged" MouseDown="tabControl1_MouseDown" KeyDown="tabControl1_KeyDown">


        <TabItem Name="fontTab" Header="Font editor" Margin="0,0,0,-1" Width="262"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

            <TabItem.Style>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TabItem}">
                                <Grid>
                                    <Border  Name="Border" Margin="0,0,-4,0" BorderThickness="1,1,1,1" CornerRadius="2,12,0,0" >
                                        <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header" Margin="12,2,12,2" RecognizesAccessKey="True"/>
                                    </Border>
                                </Grid>
                                <ControlTemplate.Triggers>

                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Panel.ZIndex" Value="100" />
                                        <Setter TargetName="Border" Property="Background" Value="LightGreen" />
                                        <Setter TargetName="Border" Property="BorderThickness" Value="1,1,1,0" />
                                    </Trigger>

                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Border" Property="Background" Value="LightGray" />
                                    </Trigger>


                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabItem.Style>
            <Border Height="347" Width="459" Margin="10,12,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" BorderThickness="2" BorderBrush="Pink">
                <Canvas 
                    Name="fontCanvas"
                    Height="340" 
                    Width="450" 
                    Margin="1,1,-182,-145" 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="AntiqueWhite"
                    MouseMove="fontCanvas_MouseMove"
                    MouseLeftButtonDown="fontCanvas_MouseLeftButtonDown"
                    MouseLeftButtonUp="fontCanvas_MouseLeftButtonUp">
                    <TextBox Height="23" Canvas.Left="480" TextWrapping="Wrap" Text="TextBox" Canvas.Top="73" Width="120"/>

                    <StackPanel Height="36" Canvas.Left="480" Canvas.Top="123" Width="118">
                        <RadioButton Content="Draw" Checked="RadioButton_Checked" IsChecked="True"/>
                        <RadioButton Content="Move" Checked="RadioButton_Checked"/>
                    </StackPanel>
                </Canvas>
            </Border>
        </TabItem>
        <TabItem Header="Text editor" Margin="0,0,0,-1" Width="250"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
                 Name="textTab">
            <TabItem.Style>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TabItem}">
                                <Grid>
                                    <Border  Name="Border" Margin="0,0,-4,0" BorderThickness="1,1,1,1" CornerRadius="2,12,0,0" >
                                        <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header" Margin="12,2,12,2" RecognizesAccessKey="True"/>
                                    </Border>
                                </Grid>
                                <ControlTemplate.Triggers>

                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Panel.ZIndex" Value="100" />
                                        <Setter TargetName="Border" Property="Background" Value="LightGreen" />
                                        <Setter TargetName="Border" Property="BorderThickness" Value="1,1,1,0" />
                                    </Trigger>

                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Border" Property="Background" Value="LightGray" />
                                    </Trigger>


                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabItem.Style>

            <ScrollViewer Height="200" Width="500" Margin="0, 50, 0, 30" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Canvas Name="editCanvas" Margin="0,0,0,0"  Width="480" Height="400" Background="AntiqueWhite" HorizontalAlignment="Left" VerticalAlignment="Top"
                        KeyDown="editCanvas_KeyDown" KeyUp="editCanvas_KeyUp" MouseDown="editCanvas_MouseDown"/>

            </ScrollViewer>

        </TabItem>

    </TabControl>

</Window>
