<Window x:Class="FontEditor.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="474.379" Width="665.52"
        TabIndex="2"
        Background="Bisque"
        ResizeMode="NoResize">


    <TabControl x:Name="tabControl1" HorizontalAlignment="Left" Height="446" Margin="0,0,-2,0" VerticalAlignment="Top" Width="662"  Background="Bisque" SelectionChanged="tabControl1_SelectionChanged" MouseDown="tabControl1_MouseDown" KeyDown="tabControl1_KeyDown">


        <TabItem Name="fontTab" Header="Font editor" Margin="0,0,0,-1" Width="262"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

            <TabItem.Style>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TabItem}">
                                <Grid>
                                    <Border  Name="Border" Margin="0,0,-4,0" BorderThickness="1,1,1,1" CornerRadius="2,12,0,0" >
                                        <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header" Margin="12,2,12,2" RecognizesAccessKey="True"/>
                                    </Border>
                                </Grid>
                                <ControlTemplate.Triggers>

                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Panel.ZIndex" Value="100" />
                                        <Setter TargetName="Border" Property="Background" Value="LightGreen" />
                                        <Setter TargetName="Border" Property="BorderThickness" Value="1,1,1,0" />
                                    </Trigger>

                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Border" Property="Background" Value="LightGray" />
                                    </Trigger>


                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabItem.Style>
            <Border Height="386" Width="455" Margin="10,12,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" BorderThickness="2" BorderBrush="Pink">
                <Canvas 
                    Name="fontCanvas"
                    Height="380" 
                    Width="450" 
                    Margin="1,1,-2,-37" 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="AntiqueWhite"
                    MouseMove="fontCanvas_MouseMove"
                    MouseLeftButtonDown="fontCanvas_MouseLeftButtonDown"
                    MouseLeftButtonUp="fontCanvas_MouseLeftButtonUp">
                    <TextBox Height="23" Canvas.Left="514" TextWrapping="Wrap" Text="TextBox" Canvas.Top="72" Width="71"/>

                    <StackPanel Height="36" Canvas.Left="480" Canvas.Top="103" Width="58">
                        <RadioButton Content="Draw" Checked="RadioButton_Checked" IsChecked="True"/>
                        <RadioButton Content="Move" Checked="RadioButton_Checked"/>
                    </StackPanel>

                    <Grid Name="previewGrid" Height="157" Width="147" Canvas.Left="480" Canvas.Top="217"/>

<!--
                    <Canvas Name="previewCanvas" Height="126" Canvas.Left="467" Canvas.Top="217" Width="152"  Background="AntiqueWhite">
                    </Canvas>-->


                    <Label Content="Preview:" Canvas.Left="514" Canvas.Top="186"/>
                    <Label Content="Letter:" Canvas.Left="524" Canvas.Top="46" RenderTransformOrigin="-0.14,0.615"/>
                    <Button Canvas.Left="514" Canvas.Top="159" Width="75" RenderTransformOrigin="0.76,0.364">
                        <Button Content="Done" Width="75" Click="Done_Click"/>
                    </Button>
                    <ComboBox Canvas.Left="490" Canvas.Top="1" Width="120"/>
                    <Button Content="Clear" Canvas.Left="552" Canvas.Top="103" Width="75"/>
                    <Label Content="Font:" Canvas.Left="454" RenderTransformOrigin="0.471,-0.115" Canvas.Top="1"/>
                    <Label Canvas.Left="646" Canvas.Top="95"/>
                    <Button Content="Undo" Canvas.Left="552" Canvas.Top="130" Width="75" Click="Undo_Click"/>
                    <Button Content="Save as" Canvas.Left="514" Canvas.Top="28" Width="75" RenderTransformOrigin="0.48,0.727"/>

                </Canvas>
            </Border>
        </TabItem>
        <TabItem Header="Text editor" Margin="0,0,0,-1" Width="250"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
                 Name="textTab">
            <TabItem.Style>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TabItem}">
                                <Grid>
                                    <Border  Name="Border" Margin="0,0,-4,0" BorderThickness="1,1,1,1" CornerRadius="2,12,0,0" >
                                        <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header" Margin="12,2,12,2" RecognizesAccessKey="True"/>
                                    </Border>
                                </Grid>
                                <ControlTemplate.Triggers>

                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Panel.ZIndex" Value="100" />
                                        <Setter TargetName="Border" Property="Background" Value="LightGreen" />
                                        <Setter TargetName="Border" Property="BorderThickness" Value="1,1,1,0" />
                                    </Trigger>

                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Border" Property="Background" Value="LightGray" />
                                    </Trigger>


                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabItem.Style>

            <ScrollViewer Height="200" Width="500" Margin="0, 50, 0, 30" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Canvas Name="editCanvas" Margin="0,0,0,0"  Width="480" Height="400" Background="AntiqueWhite" HorizontalAlignment="Left" VerticalAlignment="Top"
                        KeyDown="editCanvas_KeyDown" KeyUp="editCanvas_KeyUp" MouseDown="editCanvas_MouseDown"/>

            </ScrollViewer>

        </TabItem>

    </TabControl>

</Window>
